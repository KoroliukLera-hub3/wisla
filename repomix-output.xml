<script>
  import Lenis from 'lenis';

  // –ù–∞—Å—Ç—Ä–æ–π–∫–∏ "–¥–æ—Ä–æ–≥–æ–≥–æ" —Å–∫—Ä–æ–ª–ª–∞
  const lenis = new Lenis({
    duration: 1.2, // –î–ª–∏—Ç–µ–ª—å–Ω–æ—Å—Ç—å –∏–Ω–µ—Ä—Ü–∏–∏ (—á–µ–º –±–æ–ª—å—à–µ, —Ç–µ–º "—Ç—è–∂–µ–ª–µ–µ" —Å–∞–π—Ç)
    easing: (t) => Math.min(1, 1.001 - Math.pow(2, -10 * t)), // Expo Out
    direction: 'vertical',
    gestureDirection: 'vertical',
    smooth: true,
    mouseMultiplier: 1,
    smoothTouch: false, // –ù–∞ —Ç–∞—á-—Å–∫—Ä–∏–Ω–∞—Ö –ª—É—á—à–µ –æ—Å—Ç–∞–≤–ª—è—Ç—å –Ω–∞—Ç–∏–≤–Ω—ã–π —Å–∫—Ä–æ–ª–ª
    touchMultiplier: 2,
  });

  // –¶–∏–∫–ª –∞–Ω–∏–º–∞—Ü–∏–∏ (RAF)
  function raf(time) {
    lenis.raf(time);
    requestAnimationFrame(raf);
  }

  requestAnimationFrame(raf);

  // –ò–Ω—Ç–µ–≥—Ä–∞—Ü–∏—è —Å —è–∫–æ—Ä–Ω—ã–º–∏ —Å—Å—ã–ª–∫–∞–º–∏ (—á—Ç–æ–±—ã "–û –Ω–∞—Å" —Å–∫—Ä–æ–ª–ª–∏–ª–æ—Å—å –ø–ª–∞–≤–Ω–æ)
  document.querySelectorAll('a[href^="#"]').forEach(anchor => {
    anchor.addEventListener('click', function (e) {
      e.preventDefault();
      const href = this.getAttribute('href');
      if (!href || href === '#') return;
      
      // Lenis —Å–∞–º –æ–±—Ä–∞–±–æ—Ç–∞–µ—Ç –ø–ª–∞–≤–Ω—ã–π —Å–∫—Ä–æ–ª–ª –∫ —è–∫–æ—Ä—é
      lenis.scrollTo(href);
    });
  });
</script>

