  const closeBtn = document.getElementById('modal-close');
  const form = document.getElementById('booking-form');
  const btns = document.querySelectorAll('.btn-book');
  
  const roomNameEl = document.getElementById('modal-room-name');
  const roomIdEl = document.getElementById('modal-room-id');
  const phoneInput = document.getElementById('phone-input');
  const dateInput = document.getElementById('date-input');

  // ĞŸÑ€Ğ¾Ğ²ĞµÑ€ĞºĞ° Ğ½Ğ° Ğ½Ğ°Ğ»Ğ¸Ñ‡Ğ¸Ğµ ÑĞ»ĞµĞ¼ĞµĞ½Ñ‚Ğ¾Ğ² Ğ¿ĞµÑ€ĞµĞ´ Ğ·Ğ°Ğ¿ÑƒÑĞºĞ¾Ğ¼ Ğ»Ğ¾Ğ³Ğ¸ĞºĞ¸
  if (modal && backdrop && closeBtn && form) {

