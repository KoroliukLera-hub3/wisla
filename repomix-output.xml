<script>
  import Lenis from 'lenis';

  // ĞĞ°ÑÑ‚Ñ€Ğ¾Ğ¹ĞºĞ¸ "Ğ´Ğ¾Ñ€Ğ¾Ğ³Ğ¾Ğ³Ğ¾" ÑĞºÑ€Ğ¾Ğ»Ğ»Ğ°
  const lenis = new Lenis({
    duration: 1.2, // Ğ”Ğ»Ğ¸Ñ‚ĞµĞ»ÑŒĞ½Ğ¾ÑÑ‚ÑŒ Ğ¸Ğ½ĞµÑ€Ñ†Ğ¸Ğ¸ (Ñ‡ĞµĞ¼ Ğ±Ğ¾Ğ»ÑŒÑˆĞµ, Ñ‚ĞµĞ¼ "Ñ‚ÑĞ¶ĞµĞ»ĞµĞµ" ÑĞ°Ğ¹Ñ‚)
    easing: (t) => Math.min(1, 1.001 - Math.pow(2, -10 * t)), // Expo Out
    direction: 'vertical',
    gestureDirection: 'vertical',
    smooth: true,
    mouseMultiplier: 1,
    smoothTouch: false, // ĞĞ° Ñ‚Ğ°Ñ‡-ÑĞºÑ€Ğ¸Ğ½Ğ°Ñ… Ğ»ÑƒÑ‡ÑˆĞµ Ğ¾ÑÑ‚Ğ°Ğ²Ğ»ÑÑ‚ÑŒ Ğ½Ğ°Ñ‚Ğ¸Ğ²Ğ½Ñ‹Ğ¹ ÑĞºÑ€Ğ¾Ğ»Ğ»
    touchMultiplier: 2,
  });

  // Ğ¦Ğ¸ĞºĞ» Ğ°Ğ½Ğ¸Ğ¼Ğ°Ñ†Ğ¸Ğ¸ (RAF)
  function raf(time) {
    lenis.raf(time);
    requestAnimationFrame(raf);
  }

  requestAnimationFrame(raf);

  // Ğ˜Ğ½Ñ‚ĞµĞ³Ñ€Ğ°Ñ†Ğ¸Ñ Ñ ÑĞºĞ¾Ñ€Ğ½Ñ‹Ğ¼Ğ¸ ÑÑÑ‹Ğ»ĞºĞ°Ğ¼Ğ¸ (Ñ‡Ñ‚Ğ¾Ğ±Ñ‹ "Ğ Ğ½Ğ°Ñ" ÑĞºÑ€Ğ¾Ğ»Ğ»Ğ¸Ğ»Ğ¾ÑÑŒ Ğ¿Ğ»Ğ°Ğ²Ğ½Ğ¾)
  document.querySelectorAll('a[href^="#"]').forEach(anchor => {
    anchor.addEventListener('click', function (e) {
      e.preventDefault();
      const href = this.getAttribute('href');
      if (!href || href === '#') return;
      
      // Lenis ÑĞ°Ğ¼ Ğ¾Ğ±Ñ€Ğ°Ğ±Ğ¾Ñ‚Ğ°ĞµÑ‚ Ğ¿Ğ»Ğ°Ğ²Ğ½Ñ‹Ğ¹ ÑĞºÑ€Ğ¾Ğ»Ğ» Ğº ÑĞºĞ¾Ñ€Ñ
      lenis.scrollTo(href);
    });
  });
</script>

<style is:global>
  /* Ğ ĞµĞºĞ¾Ğ¼ĞµĞ½Ğ´Ğ¾Ğ²Ğ°Ğ½Ğ½Ñ‹Ğµ ÑÑ‚Ğ¸Ğ»Ğ¸ Ğ´Ğ»Ñ Lenis */
  html.lenis, html.lenis body {
    height: auto;
