async function downloadAndConvertImage(prompt, filepath) {
  let attempt = 1;

  while (attempt <= MAX_RETRIES) {
    try {
      const seed = Math.floor(Math.random() * 1000000);
      const encodedPrompt = encodeURIComponent(prompt);
      const url = `https://image.pollinations.ai/prompt/${encodedPrompt}?width=1280&height=720&model=flux&seed=${seed}&nologo=true`;

      if (attempt > 1) {
          console.log(`   ğŸ”„ Retry ${attempt}/${MAX_RETRIES}...`);
      } else {
          console.log(`   ğŸ”— Fetching...`);
      }

      const response = await fetchWithTimeout(url);

      if (!response.ok) {
        throw new Error(`API Error: ${response.status} ${response.statusText}`);
      }

      const arrayBuffer = await response.arrayBuffer();
      const buffer = Buffer.from(arrayBuffer);

      await sharp(buffer)
        .webp({ quality: 95 })
        .toFile(filepath);

      return; // Ğ£ÑĞ¿ĞµÑ…, Ğ²Ñ‹Ñ…Ğ¾Ğ´Ğ¸Ğ¼ Ğ¸Ğ· Ñ„ÑƒĞ½ĞºÑ†Ğ¸Ğ¸

    } catch (error) {
      console.error(`   âŒ Error (Attempt ${attempt}):`, error.message);
      
      if (attempt >= MAX_RETRIES) {
        throw new Error(`Failed to generate after ${MAX_RETRIES} attempts.`);
      }

      // ĞŸĞ°ÑƒĞ·Ğ° Ğ¿ĞµÑ€ĞµĞ´ ÑĞ»ĞµĞ´ÑƒÑÑ‰ĞµĞ¹ Ğ¿Ğ¾Ğ¿Ñ‹Ñ‚ĞºĞ¾Ğ¹ (Ğ½Ğ°Ñ€Ğ°ÑÑ‚Ğ°ÑÑ‰Ğ°Ñ: 3ÑĞµĞº, 6ÑĞµĞº...)
      const waitTime = attempt * 3000;
      console.log(`   â³ Waiting ${waitTime/1000}s before retry...`);
      await sleep(waitTime);
      
      attempt++;
    }
  }
}

