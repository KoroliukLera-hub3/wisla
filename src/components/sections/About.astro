---

<section id="o-nas" class="py-24 md:py-32 bg-surface overflow-hidden">
  <div class="container-main grid grid-cols-1 lg:grid-cols-2 gap-12 lg:gap-20 items-start pt-12 lg:pt-0">
    
    <div class="relative mt-8 lg:mt-12">
      
      <h2 class="font-serif text-5xl md:text-6xl lg:text-7xl uppercase leading-[0.9] text-primary mb-8 relative z-20 lg:absolute lg:-top-24 lg:-left-6">
        Your Private<br/>
        <span class="italic font-light">Nature</span><br/>
        Sanctuary
      </h2>

      <div class="relative z-10 overflow-hidden aspect-[4/5] md:aspect-square bg-gray-100 shadow-xl">
        <img loading="lazy" decoding="async" 
          src="/images/about-pool.webp" 
          alt="WislaStay Wellness Area" 
          class="w-full h-full object-cover transition-transform duration-700 hover:scale-105"
        />
      </div>
    </div>

    <div class="flex flex-col gap-10 lg:pl-4 lg:pt-24">
      {featuresData.map((item) => (
        <div class="flex gap-6 group/item cursor-default">
          <div class="shrink-0 w-16 h-16 border border-gray-200 flex items-center justify-center text-primary group-hover/item:border-accent group-hover/item:bg-accent group-hover/item:text-surface transition-all duration-300 shadow-sm">
            <div class="w-8 h-8" set:html={icons[item.icon as keyof typeof icons]} />
          </div>
          
          <div>
            <h3 class="font-serif text-2xl mb-2 text-primary group-hover/item:text-accent transition-colors duration-300">
              {item.title}
            </h3>
            <p class="text-[15px] text-gray-500 leading-relaxed max-w-sm font-light">
              {item.description}
            </p>
          </div>
        </div>
      ))}

      <div class="pt-8">
        <a href="#kontakt" class="inline-flex items-center gap-2 border-b border-primary pb-1 text-sm font-bold uppercase tracking-widest hover:text-accent hover:border-accent transition-all duration-300 group">
          Dowiedz się więcej
          <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4 transform group-hover:translate-x-1 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
          </svg>
        </a>
      </div>
    </div>

  </div>
</section>