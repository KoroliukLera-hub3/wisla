---
import MainLayout from '../layouts/MainLayout.astro';

const contactData = {
  address: "ul. Górska 15, 43-460 Wisła, Polska",
  phone: "+48 514 318 724",
  email: "rezerwacje@wislastay.org",
  instagram: "https://instagram.com",
  facebook: "https://facebook.com"
};
---

<MainLayout title="Kontakt | WislaStay">
  
  <section class="pt-40 pb-24 bg-white">
    <div class="container-main">
      <div class="max-w-4xl">
        <span class="text-accent text-xs font-bold uppercase tracking-[0.25em] block mb-6 animate-fade-in">
          Zapraszamy do Wisły
        </span>
        <h1 class="font-serif text-6xl md:text-8xl text-primary mb-12 animate-fade-in delay-100">
          Porozmawiajmy <br/> o Twoim <span class="italic text-gray-400">odpoczynku</span>.
        </h1>
      </div>

      <div class="grid grid-cols-1 lg:grid-cols-12 gap-16 mt-20">
        
        <div class="lg:col-span-5 space-y-16 animate-fade-in delay-200">
          
          <div>
            <label class="text-[10px] font-bold uppercase tracking-widest text-gray-400 block mb-4">Lokalizacja</label>
            <p class="font-serif text-2xl text-primary leading-relaxed">
              {contactData.address}
            </p>
            <a href="https://maps.google.com" target="_blank" class="text-xs font-bold uppercase tracking-widest text-accent mt-4 inline-block border-b border-accent/20 hover:border-accent transition-all">
              Otwórz w Google Maps
            </a>
          </div>

          <div class="grid grid-cols-1 md:grid-cols-2 gap-12">
            <div>
              <label class="text-[10px] font-bold uppercase tracking-widest text-gray-400 block mb-4">Recepcja</label>
              <a href={`tel:${contactData.phone.replace(/\s/g, '')}`} class="font-serif text-2xl text-primary hover:text-accent transition-colors">
                {contactData.phone}
              </a>
            </div>
            <div>
              <label class="text-[10px] font-bold uppercase tracking-widest text-gray-400 block mb-4">Email</label>
              <a href={`mailto:${contactData.email}`} class="font-serif text-2xl text-primary hover:text-accent transition-colors truncate block">
                {contactData.email}
              </a>
            </div>
          </div>

         

        </div>

        <div class="lg:col-span-7 bg-surface p-8 md:p-12 shadow-sm animate-fade-in delay-300">
          <h3 class="font-serif text-3xl text-primary mb-8">Napisz do nas</h3>
          
          <form class="grid grid-cols-1 md:grid-cols-2 gap-8">
            <div class="space-y-2">
              <label class="text-[10px] font-bold uppercase tracking-widest text-gray-400">Imię i Nazwisko</label>
              <input type="text" placeholder="Jan Kowalski" class="w-full bg-transparent border-b border-gray-200 py-3 outline-none focus:border-accent font-serif text-lg transition-colors" />
            </div>
            <div class="space-y-2">
              <label class="text-[10px] font-bold uppercase tracking-widest text-gray-400">Adres Email</label>
              <input type="email" placeholder="jan@example.com" class="w-full bg-transparent border-b border-gray-200 py-3 outline-none focus:border-accent font-serif text-lg transition-colors" />
            </div>
            <div class="space-y-2 md:col-span-2">
              <label class="text-[10px] font-bold uppercase tracking-widest text-gray-400">Twoja Wiadomość</label>
              <textarea rows="4" placeholder="W czym możemy pomóc?" class="w-full bg-transparent border-b border-gray-200 py-3 outline-none focus:border-accent font-serif text-lg transition-colors resize-none"></textarea>
            </div>
            <div class="md:col-span-2 pt-4">
              <button class="bg-primary text-white px-12 py-5 font-bold uppercase tracking-[0.2em] text-xs hover:bg-accent transition-all shadow-lg transform hover:-translate-y-1">
                Wyślij Wiadomość
              </button>
            </div>
          </form>
        </div>

      </div>
    </div>
  </section>

  <section class="h-[60vh] relative grayscale hover:grayscale-0 transition-all duration-1000 overflow-hidden group">
    <img src="/images/contact-map.webp" alt="Mapa Wisła" class="w-full h-full object-cover scale-105 group-hover:scale-100 transition-transform duration-1000" />
    <div class="absolute inset-0 bg-primary/10"></div>
  </section>

</MainLayout>

<style>
  .animate-fade-in {
    opacity: 0;
    transform: translateY(20px);
    animation: fadeInUp 0.8s cubic-bezier(0.16, 1, 0.3, 1) forwards;
  }
  .delay-100 { animation-delay: 0.1s; }
  .delay-200 { animation-delay: 0.2s; }
  .delay-300 { animation-delay: 0.3s; }

  @keyframes fadeInUp {
    to { opacity: 1; transform: translateY(0); }
  }
</style>